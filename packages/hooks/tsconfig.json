{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@jopau-react/utils": ["../utils/dist/types"],
      "@jopau-react/utils/*": ["../utils/dist/types/*"],
      "@jopau-react/hooks/*": ["../hooks/dist/types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["__tests__/*.test.ts"]
}
